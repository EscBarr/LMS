@page
@model LMS.Pages.StudentCoursesModel
@{
    Layout = "_Layout";
}

<div class="container customContainer LabWorkContainer">

     <div aria-label="breadcrumb">
            <ol class="mybreadcrumb">
                <li class="breadcrumb-item">
                    <a href="~/index">Домой </a>
                </li>
                <li class="breadcrumb-item not-active" aria-current="page">
                    Курсы
                </li>
            </ol>
        </div>
</div>
<div class="d-flex d-flex align-items-end" style="justify-content: space-between;">
        <div class="myHeadingPage">
            Курсы
        </div>
        
</div>

<div class="MainContainerCourse">
@foreach (var item in Model.Courses)
{
        <div class="ContainerCourse">
            <a asp-page="./CourseDetail" asp-route-id="@item.CourseId" >@item.Name</a>
            <div class="footerCourse">
             Количество участников @item.Users.Count()
             Количество заданий    @item.LaboratoryWorks.Count()
            </div>
        </div>

}
</div>

<div id="myModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Новый курс</h4><button class="close" type="button" data-bs-dismiss="modal">×</button>
            </div>
            <div class="modal-body">
                <div>
                     <form asp-page-handler="Add" method="post">
                        <label asp-for="courseDTO.Name">Название</label><br />
                        <input asp-for="courseDTO.Name" />
                        <span asp-validation-for="courseDTO.Name"></span>
                        <p><input type="submit" class="btn btn-success" value="Отправить"> </p>
                      </form>
                    
                    
                </div>
            </div>
            <div class="modal-footer"><button class="btn btn-default" type="button" data-bs-dismiss="modal">Закрыть</button></div>
        </div>
    </div>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
